.form-row.nested-fields

  .col-md-8
    .form-label-group
      = f.text_field :header, placeholder: 'Subtitulo', class: 'form-control', required: true
      = f.label :header, 'Subtitulo'
  .col-md-2
    = link_to_remove_association 'Quitar seccion', f, class: 'btn btn-danger'
  .col-md-10
    .form-label-group
      = f.text_area :body, placeholder: 'Contenido', class: 'form-control', required: true, rows: "4"
  .col-md-10
    .form-label-group
      = f.text_field :image_url, placeholder: 'URL imagen', class: 'form-control', required: false
      = f.label :image_url, 'URL imagen'
  
